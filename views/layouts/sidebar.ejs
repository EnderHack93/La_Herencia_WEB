    <link rel="stylesheet" type="text/css" href="miestilacho.css">
</head>
<body>
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="planet-outline"></ion-icon></span>
                        <span class="tittle">LA HERENCIA</span>
                    </a>
                </li>
                <li>
                    <a href="/products">
                        <span class="icon"><ion-icon name="fast-food-outline"></ion-icon></span>
                        <span class="tittle">Productos</span>
                    </a>
                </li>
                <li>
                    <a href="/categorias">
                        <span class="icon"><ion-icon name="copy-outline"></ion-icon></span>
                        <span class="tittle">Categorias</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="people-outline"></ion-icon></span>
                        <span class="tittle">Clientes</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="people-circle-outline"></ion-icon></span>
                        <span class="tittle">Pedidos</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                        <span class="tittle">Cerrar Sesion</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!--Main-->
    <div class="main">
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>
            <!--search-->
            <div class="search">
                <label>
                    <input type="text" placeholder="Buscameeeeeee">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>
            <!--Imagen usuario-->
            <div class="user">
                <img src="chicoca.jpg">
            </div>
        </div>
    </div>




    

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script>
        //Menu toggle
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('main');

        toggle.onclick = function(){
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        }


        //Hovered class in selected list item
        let list = document.querySelectorAll('.navigation li');
        function activeLink(){
            list.forEach((item) => item.classList.remove('hovered'));
            this.classList.add('hovered');
        }
        list.forEach((item) => item.addEventListener('mouseover',activeLink));
    </script>
</body>
</html>